# SNU Connectome Fellows Program - Production Environment Configuration
# =====================================================================
#
# IMPORTANT: This file contains example values only.
# Actual production values must be stored securely and never committed to version control.

# Application Settings
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_API_URL=https://api.connectome.snu.ac.kr
NEXT_PUBLIC_SITE_URL=https://connectome.snu.ac.kr

# Authentication (NextAuth.js)
NEXTAUTH_URL=https://connectome.snu.ac.kr
NEXTAUTH_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING

# Database Configuration
DATABASE_URL=postgresql://connectome_user:SECURE_PASSWORD@database:5432/connectome_fellows
DATABASE_NAME=connectome_fellows
DATABASE_USER=connectome_user
DATABASE_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# Redis Configuration
REDIS_URL=redis://:REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# OAuth Providers
GOOGLE_CLIENT_ID=REPLACE_WITH_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=REPLACE_WITH_GOOGLE_CLIENT_SECRET

# SNU-specific OAuth (if available)
SNU_OAUTH_CLIENT_ID=REPLACE_WITH_SNU_CLIENT_ID
SNU_OAUTH_CLIENT_SECRET=REPLACE_WITH_SNU_CLIENT_SECRET
SNU_OAUTH_ISSUER=https://auth.snu.ac.kr

# File Storage (MinIO/S3)
MINIO_ACCESS_KEY=REPLACE_WITH_MINIO_ACCESS_KEY
MINIO_SECRET_KEY=REPLACE_WITH_MINIO_SECRET_KEY
MINIO_ENDPOINT=http://minio:9000
MINIO_BUCKET_NAME=connectome-fellows-storage

# Email Configuration (Korean providers)
SMTP_HOST=smtp.snu.ac.kr
SMTP_PORT=587
SMTP_USER=REPLACE_WITH_SMTP_USER
SMTP_PASSWORD=REPLACE_WITH_SMTP_PASSWORD
SMTP_FROM_NAME="SNU Connectome Fellows Program"
SMTP_FROM_EMAIL=connectome@snu.ac.kr

# Monitoring and Analytics
SENTRY_DSN=REPLACE_WITH_SENTRY_DSN
GOOGLE_ANALYTICS_ID=REPLACE_WITH_GA_ID
HOTJAR_ID=REPLACE_WITH_HOTJAR_ID

# Security Settings
CORS_ORIGIN=https://connectome.snu.ac.kr
ALLOWED_HOSTS=connectome.snu.ac.kr,api.connectome.snu.ac.kr
CSP_REPORT_URI=https://connectome.report-uri.com/r/d/csp/enforce

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# Session Configuration
SESSION_TIMEOUT=7200
SESSION_SECURE=true
SESSION_SAME_SITE=strict

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,webp

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=connectome-fellows-backup
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_KEY
AWS_REGION=ap-northeast-2

# SSL/TLS Configuration
ACME_EMAIL=admin@connectome.snu.ac.kr
SSL_CERT_PATH=/etc/ssl/certs/connectome.snu.ac.kr
SSL_KEY_PATH=/etc/ssl/private/connectome.snu.ac.kr

# Grafana Configuration
GRAFANA_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
GRAFANA_ADMIN_USER=admin
GRAFANA_ORG_NAME="SNU Connectome Fellows"

# Prometheus Configuration
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_STORAGE_PATH=/prometheus

# Feature Flags
FEATURE_MULTILINGUAL=true
FEATURE_REALTIME_NOTIFICATIONS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MENTOR_MATCHING=true
FEATURE_RESEARCH_TRACKING=true

# Localization
DEFAULT_LANGUAGE=ko
SUPPORTED_LANGUAGES=ko,en
TIMEZONE=Asia/Seoul

# Performance Settings
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
BUNDLE_ANALYZER=false
SOURCE_MAPS=false

# Debugging (Set to false in production)
DEBUG=false
NEXT_PUBLIC_DEBUG=false
LOG_LEVEL=warn

# Korean Infrastructure Specific
KT_CLOUD_API_KEY=REPLACE_WITH_KT_CLOUD_KEY
NAVER_CLOUD_ACCESS_KEY=REPLACE_WITH_NAVER_CLOUD_KEY
NAVER_CLOUD_SECRET_KEY=REPLACE_WITH_NAVER_CLOUD_SECRET

# University Integration
SNU_LDAP_URL=ldap://ldap.snu.ac.kr
SNU_LDAP_BIND_DN=REPLACE_WITH_LDAP_BIND_DN
SNU_LDAP_BIND_PASSWORD=REPLACE_WITH_LDAP_PASSWORD
SNU_LDAP_SEARCH_BASE=ou=people,dc=snu,dc=ac,dc=kr

# Payment Gateway (Korean)
TOSS_PAYMENTS_CLIENT_KEY=REPLACE_WITH_TOSS_CLIENT_KEY
TOSS_PAYMENTS_SECRET_KEY=REPLACE_WITH_TOSS_SECRET_KEY
PORTONE_IMP_KEY=REPLACE_WITH_PORTONE_KEY
PORTONE_IMP_SECRET=REPLACE_WITH_PORTONE_SECRET

# Compliance and Legal
PRIVACY_POLICY_VERSION=1.0.0
TERMS_VERSION=1.0.0
GDPR_COMPLIANCE=false
KISA_COMPLIANCE=true
PIPA_COMPLIANCE=true